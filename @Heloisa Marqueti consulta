package br.com.ada.patitas.clinicaveterinaria.model;

import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

public class Consulta {

    @Retention(RetentionPolicy.RUNTIME)
    @Target(ElementType.FIELD)
    public @interface Atributo {
        String nome();
        String tipo();
    }

    public class AtributoConsultaVeterinaria {

        @Atributo(nome = "Nome do Animal", tipo = "String")
        private String nomeAnimal;

        @Atributo(nome = "Idade do Animal", tipo = "int")
        private int idadeAnimal;

        @Atributo(nome = "Diagn√≥stico", tipo = "String")
        private String diagnostico;


    }
}

